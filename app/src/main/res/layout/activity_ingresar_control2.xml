<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#E8F5E9"
    tools:context="com.example.pablosanjuan.core.controlers.control_sanitario.IngresarControl2">
    <LinearLayout
        android:padding="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:imeOptions="actionNext"
            android:id="@+id/edt_diagnostico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DiagnÃ³stico"
            android:inputType="textCapSentences|textImeMultiLine"/>
        <EditText
            android:imeOptions="actionNext"
            android:id="@+id/edt_tratamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tratamiento"
            android:inputType="textCapSentences|textImeMultiLine"/>
        <EditText
            android:imeOptions="actionNext"
            android:id="@+id/edt_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Producto"
            android:inputType="textCapSentences|textImeMultiLine"/>
        <EditText
            android:imeOptions="actionNext"
            android:id="@+id/edt_dosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dosis en letras"
            android:inputType="textCapSentences|textImeMultiLine"/>
        <EditText
            android:imeOptions="actionNext"
            android:id="@+id/edt_frecuencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Frecuencia en letras"
            android:inputType="textCapSentences|textImeMultiLine"/>
        <TextView
            android:text="Observaciones"
            android:textSize="20sp"
            android:gravity="top|left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:imeOptions="actionNext"
            android:id="@+id/edit_observaciones"
            android:layout_width="match_parent"
            android:background="@color/md_white_1000"
            android:layout_height="100dp"
            />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_atras_control_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atras"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>

            <Button
                android:id="@+id/btn_guardar_Control"
                android:text="Guardar"
                android:textColor="@color/md_white_1000"
                android:layout_alignParentRight="true"
                android:background="@color/md_green_500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"/>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>
