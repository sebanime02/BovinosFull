<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#E8F5E9"
    tools:context="com.example.pablosanjuan.core.controlers.inventario.IngresarBovino">

    <TextView
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empadre"/>

    <RadioGroup
        android:id="@+id/rdgGrupo_empadre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rdgMontaNatural"
            android:text="Monta Natural"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rdgInseminacion"
            android:text="Inseminación Artificial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

        <EditText
            android:imeOptions="actionNext"
            android:id="@+id/num_pajilla"
            android:hint="Número Pajilla"
            android:layout_width="500dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <EditText
            android:imeOptions="actionNext"
            android:id="@+id/raza_animlal"
            android:gravity="center"
            android:hint="Raza Animal"
            android:layout_width="500dp"
            android:layout_height="wrap_content" />
        <EditText
            android:imeOptions="actionNext"
            android:id="@+id/procedencia"
            android:gravity="center"
            android:hint="Procedencia"
            android:layout_width="500dp"
            android:layout_height="wrap_content" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_atras_ing_rep_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atras"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>

        <Button
            android:id="@+id/btn_siguiente_ing_rep_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:layout_alignParentRight="true"
            android:textColor="@color/md_white_1000"
            android:background="@color/md_green_500"/>
    </RelativeLayout>
</LinearLayout>