<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#E8F5E9"
    android:padding="40dp"
    tools:context="com.example.pablosanjuan.core.controlers.alimentacion.IngresarAlimentacion2">
    <EditText
        android:imeOptions="actionNext"
        android:id="@+id/edt_racion"
        android:inputType="number|textImeMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ración (Kg/Animal por día)"
        android:maxLines="1"/>

    <EditText
        android:imeOptions="actionNext"
        android:id="@+id/edt_producto"
        android:inputType="textCapSentences|textImeMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Producto"
        android:maxLines="1"/>

    <EditText
        android:imeOptions="actionNext"
        android:id="@+id/edt_valor_kilo"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor por Kilo (Pesos $)"
        android:maxLines="1"/>


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_atras_alimentacion_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Atras"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>
        <Button
            android:id="@+id/btn_siguiente_ing_rep_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:onClick="onClick"
            android:textColor="@color/md_white_1000"
            android:layout_alignParentRight="true"
            android:background="@color/md_green_500"/>
    </RelativeLayout>
</LinearLayout>
