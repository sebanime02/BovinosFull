<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.example.pablosanjuan.core.controlers.praderas.IngresarPradera">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/edt_foto_pradera"
                    android:background="@drawable/add"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />

                <EditText
                    android:imeOptions="actionNext"
                    android:id="@+id/edt_id_pradera"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Potrero"
                    android:maxLines="1"/>
                <EditText
                    android:imeOptions="actionNext"
                    android:id="@+id/edt_tipo_pradera"
                    android:inputType="textCapSentences|textImeMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tipo de GramÃ­nea"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Ingreso"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_fecha_ocupacion"
                    android:text="DD/MM/AAAA"
                    android:onClick="onClick"
                    android:gravity="left|center_vertical"

                    style="@style/Base.Widget.AppCompat.ActionButton.Overflow"
                    android:textColor="@color/negro" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Salida"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_fecha_salida"
                    android:text="DD/MM/AAAA"
                    android:onClick="onClick"
                    android:gravity="left|center_vertical"

                    style="@style/Base.Widget.AppCompat.ActionButton.Overflow"
                    android:textColor="@color/negro" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                    android:layout_alignParentRight="true"
                    android:id="@+id/btn_siguiente7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siguiente"
                    android:textColor="@color/md_white_1000"
                    android:background="@color/md_green_500"
                    android:onClick="onClick"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
</ScrollView>