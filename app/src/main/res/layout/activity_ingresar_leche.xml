<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#E8F5E9"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:gravity="center"
        tools:context="com.example.pablosanjuan.core.controlers.IngresarBovino">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imv_bovinol"
                android:src="@drawable/imv_bovinol"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
                <AutoCompleteTextView
                    android:id="@+id/edt_id_bovinol"
                    android:inputType="textCapSentences|textImeMultiLine"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:hint="ID"
                    android:imeOptions="actionNext"
                    android:maxLines="1"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="QR"
        android:textColor="@color/md_white_1000"
        android:background="@color/md_green_500"
        android:layout_weight="1"
        android:id="@+id/scanQrLeche"
        android:layout_gravity="right" />

</LinearLayout>
                <EditText
                    android:imeOptions="actionNext"
                    android:id="@+id/edt_nombre_bovinol"
                    android:inputType="textCapSentences|textImeMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    android:enabled="false"
                    />

                <EditText

                    android:imeOptions="actionNext"
                    android:id="@+id/edt_lote"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lote"
                    />

                <EditText
                    android:imeOptions="actionNext"
                    android:id="@+id/edt_parto"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Numero de parto"
                    />

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_guardar_Leche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/md_green_500"
                android:text="Guardar"
                android:textColor="@color/md_white_1000"
                android:layout_alignParentRight="true"
                android:onClick="onClick"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>