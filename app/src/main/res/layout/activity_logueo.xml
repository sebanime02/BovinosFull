<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.example.pablosanjuan.core.controlers.Logueo"
    android:stretchColumns="*"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"

        >

        <ImageView
            android:layout_width="@dimen/login_logo_size"
            android:layout_height="@dimen/login_logo_size"

            android:src="@drawable/ic_launcher"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ganko Bovinos"
            android:textColor="@color/md_green_500"
            android:textSize="@dimen/login_txt_app_size"
            android:layout_marginTop="@dimen/login_margin_top_small"
            />

        <EditText
            android:id="@+id/edt_usuario"
            android:layout_marginTop="@dimen/login_margin_top_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_txt_user"
            />
        <EditText
            android:id="@+id/edt_contraseÃ±a"
            android:layout_marginTop="@dimen/login_margin_top_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_txt_pass"
            />

    </LinearLayout>

    <TableRow>
        <Button
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:id="@+id/btn_registro"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            />
        <Button
            android:id="@+id/btn_validar"
            android:layout_height="wrap_content"
            android:hint="@color/primary"
            android:text="Ingresar"
            />
    </TableRow>


</TableLayout>
