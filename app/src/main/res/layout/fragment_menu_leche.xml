<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#E8F5E9"
    android:orientation="vertical"
    tools:context="com.example.pablosanjuan.core.controlers.inventario.FragInventario$PlaceholderFragment">

    <TextView
        android:id="@+id/tv1"
        android:text="Registro Productivo Leche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/md_green_500"
        android:layout_marginTop="10dp"/>

    <ListView
        android:layout_below="@id/tv1"
        android:id="@+id/lista_leche"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="5sp"
        android:layout_marginRight="@dimen/activity_horizontal_margin2"
        android:layout_marginLeft="@dimen/activity_horizontal_margin1"/>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/btn_agregar_leche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_margin="9dp"
        fab:fab_colorNormal="@color/md_green_500"
        fab:fab_colorPressed="@color/md_green_500_50"
        android:layout_alignParentBottom="true"
        android:src="@android:drawable/ic_menu_add"
        />

</RelativeLayout>
