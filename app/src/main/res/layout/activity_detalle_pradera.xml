<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pablosanjuan.core.controlers.praderas.Detalle_Pradera">

    <ImageView
        android:id="@+id/imgDetallePradera"
        android:layout_width="@dimen/img_detalle"
        android:layout_height="@dimen/img_detalle"/>
    <LinearLayout
        android:paddingLeft="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/imgDetallePradera"
        >
    <ScrollView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/md_green_500"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pradera:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Datos Praderas"
                android:id="@+id/datos_pradera"/>
        </LinearLayout>
    </ScrollView>
        </LinearLayout>
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/btn_edit_inventario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_margin="9dp"
        android:layout_alignParentBottom="true"
        fab:fab_colorNormal="@color/md_green_500"
        fab:fab_colorPressed="@color/md_green_500_50"
        android:onClick="onClick"
        android:src="@android:drawable/ic_menu_edit"
        />
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/btn_delete_pradera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@color/md_green_500"
        fab:fab_colorPressed="@color/md_green_500_50"
        android:background="@color/md_green_50"
        android:onClick="onClick_delete_prad"
        android:src="@android:drawable/ic_menu_delete"
        android:layout_margin="8dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/btn_edit_inventario"/>
</RelativeLayout>
