<ScrollView
android:layout_height="match_parent"
android:layout_width="match_parent"
    android:background="#E8F5E9"
xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#E8F5E9"
    tools:context="com.example.pablosanjuan.core.controlers.plan_vacunacion.RegistrarVacuna1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/imv_bovinol"
            android:id="@+id/foto_bovino_pv"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:hint="ID"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:id="@+id/comple"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="QR"
        android:textColor="@color/md_white_1000"
        android:background="@color/md_green_500"
        android:layout_weight="1"
        android:id="@+id/scanQrVacuna"
        android:layout_gravity="right" />
</LinearLayout>
            <EditText
                android:imeOptions="actionNext"
                android:id="@+id/edt_nombre_pv"
                android:inputType="textCapSentences|textImeMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Vacunacion:"
                 />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_fecha_pv"
                android:text="DD/MM/AAAA"
                android:onClick="onClick"
                android:gravity="left|center_vertical"

                style="@style/Base.Widget.AppCompat.ActionButton.Overflow"/>

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_siguiente_pv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:layout_alignParentRight="true"
            android:background="@color/md_green_500"
            android:onClick="onClick"
            android:textColor="@color/md_white_1000"
            android:layout_gravity="right" />
    </RelativeLayout>


</LinearLayout>
</ScrollView>
