<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#E8F5E9"
    tools:context="com.example.pablosanjuan.core.controlers.Fragment1$PlaceholderFragment">

    <TextView
        android:textColor="@color/md_green_500"
        android:gravity="center"
        android:text="Lotes de Praderas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="30dp"/>


    <ListView

        android:id="@+id/lista7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/activity_horizontal_margin2"
        android:layout_marginLeft="@dimen/activity_horizontal_margin1"
        android:layout_below="@+id/textView2">
    </ListView>
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/btn_agregar_pradera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_margin="9dp"
        fab:fab_colorNormal="@color/md_green_500"
        fab:fab_colorPressed="@color/md_green_500_50"
        android:src="@android:drawable/ic_menu_add"/>



</RelativeLayout>