<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pablosanjuan.core.controlers.reg_reproductivo.DetalleRegReproductivo">


    <LinearLayout
        android:paddingLeft="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/md_green_500"
            android:textSize="30dp"
            android:text="Registro Reproductivo:"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/datos_reproductivo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        </ScrollView>

    </LinearLayout>
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/btn_edit_reproductivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_margin="9dp"
        android:layout_alignParentBottom="true"
        fab:fab_colorNormal="@color/md_green_500"
        fab:fab_colorPressed="@color/md_green_500_50"
        android:onClick="edit"
        android:src="@android:drawable/ic_menu_edit"
        />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/btn_delete_reproductivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/btn_edit_reproductivo"
        android:layout_margin="9dp"
        fab:fab_colorNormal="@color/md_green_500"
        fab:fab_colorPressed="@color/md_green_500_50"
        android:onClick="delete"
        android:src="@android:drawable/ic_menu_delete"
        />
</RelativeLayout>
