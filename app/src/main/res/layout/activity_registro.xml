<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.example.pablosanjuan.core.controlers.Registro">

    <EditText
        android:imeOptions="actionNext"
        android:id="@+id/edt_nombre_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre Completo"/>
    <EditText
        android:imeOptions="actionNext"
        android:id="@+id/edt_direccion_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Direccion"/>
    <EditText
        android:imeOptions="actionNext"
        android:id="@+id/edt_correo"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo"/>
    <EditText

        android:imeOptions="actionNext"
        android:id="@+id/edt_usuario_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usuario"/>
    <EditText

        android:imeOptions="actionNext"
        android:id="@+id/edt_contraseña_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


    <Button
        android:onClick="onClick"
        android:id="@+id/btn_hacia_loguin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loguin"
        android:textSize="20sp"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
        <Button
            android:textColor="@color/md_white_1000"
            android:background="#1abc11"
            android:id="@+id/btn_grdr_registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="@color/primary"
            android:text="REGISTRARSE"/>
    </RelativeLayout>
</LinearLayout>
</ScrollView>