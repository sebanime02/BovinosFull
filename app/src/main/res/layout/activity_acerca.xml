<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/md_white_1000"
    tools:context="com.example.pablosanjuan.core.controlers.Acerca_de">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <TextView
            android:textSize="@dimen/elemento_text_size_ultimos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Desarrollador por:"/>
        <ImageView
            android:src="@drawable/logo_ceoti"
            android:layout_width="200dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:textSize="@dimen/elemento_text_size_ultimos"
            android:text="GANKO - Bovinos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/elemento_text_size_ultimos"
            android:text="Version 1.0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/elemento_text_size_ultimos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/elemento_text_size_ultimos"
            android:text="CeoTic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/elemento_text_size_ultimos"
            android:text="Empresa en desarrollo de software para salud y sectores productivos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/elemento_text_size_ultimos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/elemento_text_size_ultimos"
            android:text="Contacto:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/elemento_text_size_ultimos"
            android:text="Edwin Ordoñez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView


            android:textSize="@dimen/elemento_text_size_ultimos"
            android:text="3107725172"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/elemento_text_size_ultimos"
            android:text="ceotic.servicio@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/elemento_text_size_ultimos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/elemento_text_size_ultimos"
            android:text="Popayán - Colombia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/elemento_text_size_ultimos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/elemento_text_size_ultimos"
            android:text="Visitanos."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton
            android:layout_margin="5dp"
            android:id="@+id/facebook"
            android:background="@drawable/facebook"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageButton
            android:layout_margin="5dp"
            android:id="@+id/twitter"
            android:background="@drawable/twitter"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>
</LinearLayout>
