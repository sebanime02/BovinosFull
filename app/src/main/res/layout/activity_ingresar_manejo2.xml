<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#E8F5E9"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pablosanjuan.core.controlers.control_sanitario.IngresarControl2">
    <LinearLayout
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:imeOptions="actionNext"
            android:id="@+id/edt_tratamiento6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tratamiento o Estrategia"
            android:inputType="textCapSentences|textImeMultiLine"/>
        <EditText
            android:imeOptions="actionNext"
            android:id="@+id/edt_producto6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Producto"
            android:inputType="textCapSentences|textImeMultiLine"/>
        <TextView
            android:text="Observaciones"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:imeOptions="actionNext"
            android:id="@+id/edit_observaciones6"
            android:layout_width="match_parent"
            android:background="@color/blanco"
            android:layout_height="100dp"
            />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_atras_manejo_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atras"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>
            <Button
                android:id="@+id/btn_guardar_manejo"
                android:text="Guardar"
                android:textColor="@color/md_white_1000"
                android:background="@color/md_green_500"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
