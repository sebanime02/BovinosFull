<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#E8F5E9"
    android:orientation="vertical"
    tools:context="com.example.pablosanjuan.core.controlers.Fragment1$PlaceholderFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView android:text="Registros Del Dia: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txv_reg_dia"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:textColor="@color/md_green_500"/>

    <ListView
        android:id="@+id/lista_leche_dia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="5sp"
        android:layout_marginRight="@dimen/activity_horizontal_margin2"
        android:layout_marginLeft="@dimen/activity_horizontal_margin1"/>

</LinearLayout>
