<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.example.pablosanjuan.core.controlers.IngresarPradera2">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="Fecha de FertilizaciÃ³n"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_fecha_fertilizacion"
            android:text="DD/MM/AAAA"
            android:onClick="onClick"
            android:gravity="left|center_vertical"

            style="@style/Base.Widget.AppCompat.ActionButton.Overflow"
            android:textColor="@color/negro" />

        <EditText
            android:imeOptions="actionNext"
            android:id="@+id/edt_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Producto"
            android:inputType="textCapSentences|textImeMultiLine"/>
        <EditText
            android:imeOptions="actionNext"
            android:id="@+id/edt_cantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad en letras"
            android:inputType="textCapSentences|textImeMultiLine"/>






        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btn_atras_praderas_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atras"

                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>

            <Button
                android:id="@+id/btn_guardar_pradera"
                android:text="Guardar"
                android:textColor="@color/md_white_1000"
                android:background="@color/md_green_500"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </RelativeLayout>



    </LinearLayout>
</ScrollView>
