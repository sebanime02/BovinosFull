
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.pablosanjuan.core.controlers.alimentacion.DetalleAlimentacion">

        <ImageView
            android:id="@+id/imgbovino"
            android:layout_width="@dimen/img_detalle"
            android:layout_height="@dimen/img_detalle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/md_green_500"
                android:textSize="30sp"
                android:text="Alimentacion:"/>
            <ListView android:id="@+id/lsalimentacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imgbovino"
                android:dividerHeight="2dp"
                android:divider="@color/md_green_500"/>

        </LinearLayout>

    </LinearLayout>
