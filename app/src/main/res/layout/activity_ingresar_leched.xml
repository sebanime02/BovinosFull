<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#E8F5E9"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.example.pablosanjuan.core.controlers.IngresarBovino">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:src="@drawable/imv_bovinol"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <LinearLayout
            android:paddingLeft="60dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<TextView
                android:id="@+id/txv_id_ld"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Id"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txv_nombre_ld"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="20sp"
                />-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jornada"
                android:textSize="20sp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spi_jornada"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textSize="20sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DD/MM/AAAA"
                android:id="@+id/btn_fechald"
                android:onClick="onClick"
                style="@style/Base.Widget.AppCompat.ActionButton.Overflow"/>

            <EditText
                android:imeOptions="actionNext"
                android:id="@+id/edt_produ_diaria"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Produccion(Litros)"
                />

            <EditText
                android:imeOptions="actionNext"
                android:id="@+id/edt_precio"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio Litro"
                />
        </LinearLayout>

    </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_guardar_leched"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:textColor="@color/md_white_1000"
                android:background="@color/md_green_500"
                android:layout_alignParentRight="true"
                android:onClick="onClick"/>
        </RelativeLayout>


</LinearLayout>
</ScrollView>