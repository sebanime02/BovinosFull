<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#E8F5E9"
    tools:context="com.example.pablosanjuan.core.controlers.inventario.IngresarBovino2">
<LinearLayout
    android:padding="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="Tipo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/spi_proposito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_proposito"/>
    <TextView
        android:text="Peso:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:imeOptions="actionNext"
        android:id="@+id/edt_peso"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Peso(Kg)"/>
    <TextView
        android:text="Color:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:imeOptions="actionNext"
        android:id="@+id/edt_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Color"
        android:inputType="textCapSentences|textImeMultiLine"/>
    <TextView
        android:text="Raza:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:imeOptions="actionNext"
        android:id="@+id/edt_raza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Raza"
        android:inputType="textCapSentences|textImeMultiLine"/>
    <TextView
        android:text="Id Padre:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:imeOptions="actionNext"
        android:id="@+id/edt_id_padre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Padre"
        android:inputType="textCapSentences|textImeMultiLine"/>
    <TextView
        android:text="Id Madre:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:imeOptions="actionNext"
        android:id="@+id/edt_id_madre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Madre"
        android:inputType="textCapSentences|textImeMultiLine"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_atras_ing_Bovino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atras"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>

        <Button
            android:id="@+id/btn_guardar_Bovino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:textColor="@color/md_white_1000"
            android:layout_alignParentRight="true"
            android:background="@color/md_green_500"/>
    </RelativeLayout>
</LinearLayout>
</ScrollView>
