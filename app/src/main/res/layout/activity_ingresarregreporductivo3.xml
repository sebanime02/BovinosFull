<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#E8F5E9"
    tools:context="com.example.pablosanjuan.core.controlers.inventario.IngresarBovino">

        <EditText
        android:imeOptions="actionNext"
        android:gravity="center"
        android:id="@+id/edt_id_reprodutor_reg3"
        android:inputType="textCapSentences|textImeMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Reproductor"
        android:maxLines="1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_preñez"
            android:hint="Fecha Diagnóstico de Preñez: DD/MM/AAAA"
            android:gravity="left|center_vertical"
            style="@style/Base.Widget.AppCompat.ActionButton.Overflow"/>
        <Button
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_fecha_posible_parto"
            android:hint=" Fecha Probable de Parto: DD/MM/AAAA"
            android:gravity="left|center_vertical"
            style="@style/Base.Widget.AppCompat.ActionButton.Overflow"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_parto"
            android:hint="Fecha de Parto:  DD/MM/AAAA"
            android:gravity="left|center_vertical"
            android:layout_marginRight="9dp"
            style="@style/Base.Widget.AppCompat.ActionButton.Overflow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="Número de Partos: "/>
        <Spinner
            android:id="@+id/spi_num_parto"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:prompt="@string/spinner_proposito"/>
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_atras_ing_rep_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atras"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>

        <Button
            android:id="@+id/btn_siguiente_ing_rep_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:layout_alignParentRight="true"
            android:textColor="@color/md_white_1000"
            android:background="@color/md_green_500"/>
    </RelativeLayout>
</LinearLayout>